@using Turisticka_Agencija.Models
@{
    Layout = null;
    ViewBag.Title = "Rezervacije";
}

<!DOCTYPE html>

@{

    <!--INIT-->

    Korisnik korisnik = (Korisnik)HttpContext.Current.Session["korisnik"];
    Dictionary<string, Korisnik> korisnici = (Dictionary<string, Korisnik>)HttpContext.Current.Application["korisnici"];

    <!--INIT-->

}

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/CSS/flexboxgrid.css">
    <link rel="stylesheet" href="~/Content/CSS/style.css">
</head>

<body>

    <!-- GLAVNI MENI -->

    @{

        if (korisnik != null && korisnik.uloga.Equals(Uloga.TURISTA))
        {

            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            <h1><span class="primary-text">Travel</span>Fuge</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-8 col-md-8 col-lg-8">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li class="active"><a href="~/Rezervacije/Index">Rezervacije</a></li>
                                    <li><a href="~/Istorija/Index">Prethodni aranžmani</a></li>
                                    <li><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

        }

        else if (korisnik != null && korisnik.uloga.Equals(Uloga.MENADZER))
        {

            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-2 col-md-2 col-lg-2">
                            <h1><span class="primary-text">Travel</span>Fuge</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-10 col-md-10 col-lg-10">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li class="active"><a href="~/Rezervacije/Index">Rezervacije</a></li>
                                    <li><a href="~/Istorija/Index">Prethodni aranžmani</a></li>
                                    <li><a href="~/Menadzer/Index">Kreriraj aranžman</a></li>
                                    <li><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>
        }

        else if (korisnik != null && korisnik.uloga.Equals(Uloga.ADMINISTRATOR))
        {

            <header id="main-header">
                <div class="container">
                    <div class="row center-xs middle-xs middle-sm middle-md middle-lg">
                        <div class="start-sm start-md start-lg col-xs-12 col-sm-4 col-md-4 col-lg-4">
                            <h1><span class="primary-text">Travel</span>Fuge</h1>
                        </div>
                        <div class="end-sm end-md end-lg col-xs-12 col-sm-8 col-md-8 col-lg-8">
                            <nav id="navbar">
                                <ul>
                                    <li><a href="~/Home/Index">Home</a></li>
                                    <li class="active"><a href="~/Rezervacije/Index">Rezervacije</a></li>
                                    <li><a href="~/Istorija/Index">Prethodni aranžmani</a></li>
                                    <li><a href="~/Menadzer/Index">Kreriraj aranžman</a></li>
                                    <li><a href="~/Administrator/Index">Registruj menadžera</a></li>
                                    <li><a href="~/Profil/Index">Profil</a></li>
                                    <li><a href="~/Login/Odjava">Odjava</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </header>

        }

    }

    <!-- GLAVNI MENI -->

    <!-- GLAVNI HEADER -->

    <section id="showcase">
        <div class="container">
            <div class="row center-xs center-sm center-md center-lg middle-sm">
                <div class="col-xs-10 col-sm-10 col-md-10 col-lg-9 showcase-content">
                    <h1>LETOVANJE 2021 uz <span class="primary-text">Travel</span>Fuge</h1>
                    <p style="color:white; font-size:25px; margin-top:10px">Klikom do mora</p>
                </div>
            </div>
        </div>
    </section>

    <!-- GLAVNI HEADER -->

    <!-- REZERVACIJE -->

    <section id="offers">
        <div class="container">
            <div class="row center-xs center-sm center-md center-md">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2>Rezervacije</h2>
                    <p>Srećan put želi Vam <span class="primary-text">Travel</span>Fuge</p>
                    <div class="row center-xs center-sm center-md center-md">
                        @if (korisnik.rezervacije != null)
                        {
                            foreach (Rezervacija r in korisnik.rezervacije.Values)
                            {
                                <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                    <p style="text-align:left; font-size:15px; margin-left: 115px">
                                        ID Rezervacije: <span class="primary-text">@r.oznakaRezervacije</span> <br>
                                        Ime: @r.korisnik.ime <br>
                                        Prezime: @r.korisnik.prezime <br>
                                        Status: @r.status.ToString() <br>
                                        Naziv aranžmana: @r.aranzman.naziv <br>
                                        Naziv smeštaja: @r.smestajnaJedinica.nazivSmestaja <br>
                                        Broj gostiju: @r.smestajnaJedinica.dozvoljenBrojGostiju <br>
                                    </p>
                                </div>
                            }
                        }
                    </div>
                    <h4 style="margin-bottom:20px; color:#7BA17D">@ViewBag.Error</h4>
                </div>
            </div>
        </div>
    </section>

    <!-- REZERVACIJE -->

    <!-- PRETRAGA ARANŽMANA -->

    <form action="~/Rezervacije/Pretraga" method="post">
        <section id="offers">
            <div class="container">
                <div class="row center-xs center-sm center-md center-md">
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <h2 style="margin-top: 15px">Pretraga i sortiranje rezervacija</h2>

                        <div class="row center-xs center-sm center-md center-md">

                            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3" style="margin-top:15px">
                                <input type="number" name="brojGostijuMin" placeholder="Unesite minimalan broj gostiju">
                                <input type="number" name="brojGostijuMax" placeholder="Unesite maksimalan broj gostiju">
                                <input type="text" name="nazivAranzmana" placeholder="Unesite naziv aranžmana">
                                <input type="text" name="nazivSmestaja" placeholder="Unesite naziv smeštaja">
                                <input type="submit" value="Pretraži"
                                       style="
                                        color:white;
                                        padding:10px;
                                        border:0px;
                                        width:267px;
                                        height:35px;
                                        text-align:center;
                                        margin-bottom:30px;">
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>

    <!-- PRETRAGA ARANŽMANA -->
    <!-- SORTIRANJE REZERVACIJA -->

    <form action="~/Rezervacije/Sortiranje" method="post">
        <section id="offers">
            <div class="container">
                <div class="row center-xs center-sm center-md center-md">
                    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        <input list="sort" name="podatakZaSortiranje" placeholder="Odaberite podatak za sortiranje" style="text-align:center">
                        <datalist id="sort">
                            <option value="Broj gostiju"></option>
                            <option value="Status"></option>
                        </datalist>
                        <input list="sortTip" name="tipSortiranja" placeholder="Odaberite način sortiranja" style="text-align:center">
                        <datalist id="sortTip">
                            <option value="Rastuće"></option>
                            <option value="Opadajuće"></option>
                        </datalist>
                        <input type="submit" value="Sortiraj" id="pretraga"
                               style="
                               color:white;
                               padding:10px;
                               border:0px;
                               width:267px;
                               height:35px;
                               text-align:center;
                               margin-bottom:30px;">
                    </div>
                </div>
            </div>
        </section>
    </form>

    <!-- SORTIRANJE REZERVACIJA -->
    <!-- INFORMACIJE -->

    <section id="company">
        <div class="container">
            <div class="row">
                <div class="start-xs start-sm start-md start-lg col-xs-12 col-sm-3 col-md-3 col-lg-3">
                </div>
                <div class=" col-xs-12 col-sm-6 col-md-6 col-lg-6">
                    <h4 class="center-xs center-sm center-md center-lg">O nama</h4>
                    <p style="text-align:justify">
                        Turistička agencija <span class="primary-text">Travel</span>Fuge je sa vama od 1999. godine, kada smo započeli svoju misiju da svima
                        približimo mogućnost da na jednom mestu mogu pronaći sve turističke usluge.Turističke agencije koje zastupa Maestral Novi Sad – Argus tours,
                        Plana tours, Nitravel, Moj Svet, Turisttrade, Travelland, Aqua travel, Wayout, Dertour, Astra travel.
                    </p>
                </div>
                <div class="end-xs end-sm end-md end-lg col-xs-12 col-sm-3 col-md-4 col-lg-3">
                </div>
            </div>
        </div>
    </section>

    <!-- INFORMACIJE -->
    <!-- FOOTER -->

    <footer id="main-footer">
        <div class="container">
            <div class="row center-xs center-sm center-md center-lg">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <p>Copyright &copy; 2021 | TravelFuge</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- FOOTER -->

</body>
</html>
